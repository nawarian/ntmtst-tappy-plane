{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "baseUrl": ".",
    "paths": {
      "@assets/*": ["./assets/*"],
      "@scenes/*": ["./src/scenes/*"],
      "@objects/*": ["./src/objects/*"],
      "@utils/*": ["./src/utils/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
